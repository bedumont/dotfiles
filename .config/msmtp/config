defaults
protocol        smtp
auth            on
tls             on
tls_trust_file  /etc/ssl/certs/ca-certificates.crt

# ULB
account         ULB
host            smtp.ulb.ac.be
port            587
from            bedumont@ulb.ac.be
user            bedumont
passwordeval    "pass Email/ulb.ac.be/bedumont"

# Outlook
account         Outlook
host            smtp.office365.com
port            587
from            dumont.benjamin@live.fr
user            dumont.benjamin@live.fr
passwordeval    "pass Email/live.com/dumont.benjamin@live.fr"

#Set default account
account default : ULB
