[volume]
label=vol:
instance=Master
#instance=PCM
command=~/scripts/statusbar/volume
interval=5
signal=1

[disk-root]
label=/root:
instance=/
command=/usr/lib64/i3blocks/disk
interval=30
separator=false

[disk-home]
label=/home:
instance=/home
command=/usr/lib64/i3blocks/disk
interval=30

[wireless]
label=w:
instance=wlp3s0
#instance=wlp0s29u1u2
command=~/scripts/statusbar/ssid
color=#BF616A
interval=5

[ethernet]
label=e:
instance=eth0
#instance=enp0s25
command=/usr/lib64/i3blocks/network
color=#BF616A
interval=10

[battery]
command=~/scripts/statusbar/battery BAT0
interval=5

[mailbox]
label=mail:
command=~/scripts/statusbar/mailbox
