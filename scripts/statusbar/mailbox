#!/bin/sh

# i3blocks mail module.
# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BLOCK_BUTTON in
    1) st -e neomutt ;;
    2) pgrep -x dunst >/dev/null && notify-send "ðŸ“¬ Mail module" "\- Shows unread mail
- Shows ðŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
    3) setsid mailsync >/dev/null & ;;
esac
echo "$(find ~/Mail/*/I*/new -type f | wc -l)$(cat /tmp/imapsyncicon_$USER 2>/dev/null)"
